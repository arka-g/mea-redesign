<%= form_for(@event) do |f| %>
  <section id="main" class="container 75%">
    <header>
      <h2 class="align-center"><%= title %></h2>
    </header>
    <div class="box">
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :description %><br>
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :location %><br>
            <%= f.text_field :location, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :facebook_link %><br>
            <%= f.text_field :facebook_link, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :date %><br>
            <%= f.date_select :date, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :start_time %><br>
            <%= f.time_field :start_time, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group">
            <%= f.label :end_time %><br>
            <%= f.time_field :end_time, class: "form-control" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row uniform">
        <div class="12u">
          <div class="form-group align-center">
            <%= f.submit "Save Event", class: "btn btn-lg btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
